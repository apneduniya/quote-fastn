-- import: fifthtry.github.io/doc-site as ds
-- import: fastn-community.github.io/winter-cs
-- import: fastn-community.github.io/roboto-mono-typography


;;  L I N E A R  G R A D I E N T S

;; -- ftd.linear-gradient bg: 
